{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@a2ui-web/config-typescript/react",
  "compilerOptions": {
    "paths": {
      "@a2ui-web/custom-ui/*": ["../custom-ui/*"],
      "@a2ui-web/lit-core": ["../lit-core/dist/index.d.ts"],
      "@a2ui-web/lit-core/*": ["../lit-core/dist/*"]
    },
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "incremental": false,
    "moduleResolution": "bundler",
    "module": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
