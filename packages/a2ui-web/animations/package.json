{
  "name": "@a2ui-web/animations",
  "version": "0.8.1",
  "description": "Shared animation and icon libraries (Lenis, Framer Motion, Lucide React)",
  "author": "a2ui-web",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.longbridge-inc.com:2222/long-bridge-frontend/a2ui-component.git",
    "directory": "animations"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./styles.css": "./dist/styles.css",
    "./lenis": {
      "import": "./dist/lenis.js",
      "types": "./dist/lenis.d.ts"
    },
    "./motion": {
      "import": "./dist/motion.js",
      "types": "./dist/motion.d.ts"
    },
    "./icons": {
      "import": "./dist/icons.js",
      "types": "./dist/icons.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./components/animated-counter": {
      "import": "./dist/components/animated-counter.js",
      "types": "./dist/components/animated-counter.d.ts"
    },
    "./components/page-load-progress": {
      "import": "./dist/components/page-load-progress.js",
      "types": "./dist/components/page-load-progress.d.ts"
    },
    "./components/parallax-section": {
      "import": "./dist/components/parallax-section.js",
      "types": "./dist/components/parallax-section.d.ts"
    },
    "./components/scroll-progress": {
      "import": "./dist/components/scroll-progress.js",
      "types": "./dist/components/scroll-progress.d.ts"
    },
    "./components/scroll-reveal": {
      "import": "./dist/components/scroll-reveal.js",
      "types": "./dist/components/scroll-reveal.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "lenis": [
        "./dist/lenis.d.ts"
      ],
      "motion": [
        "./dist/motion.d.ts"
      ],
      "icons": [
        "./dist/icons.d.ts"
      ],
      "components": [
        "./dist/components/index.d.ts"
      ],
      "components/animated-counter": [
        "./dist/components/animated-counter.d.ts"
      ],
      "components/page-load-progress": [
        "./dist/components/page-load-progress.d.ts"
      ],
      "components/parallax-section": [
        "./dist/components/parallax-section.d.ts"
      ],
      "components/scroll-progress": [
        "./dist/components/scroll-progress.d.ts"
      ],
      "components/scroll-reveal": [
        "./dist/components/scroll-reveal.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prepare": "bun run build",
    "build": "tsup --config src/tsup.config.ts && bun run build:css",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.tmp.css --minify && bunx postcss ./dist/styles.tmp.css -o ./dist/styles.css && rm ./dist/styles.tmp.css",
    "dev": "tsup --config src/tsup.config.ts --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "framer-motion": "^6.5.1",
    "lucide-react": ">=0.400.0",
    "@studio-freight/lenis": "1.0.42"
  },
  "peerDependencies": {
    "framer-motion": "^6.5.1",
    "lucide-react": ">=0.400.0",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@a2ui-web/config-tailwind": "^0.8.0",
    "@a2ui-web/config-typescript": "^0.8.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/react": "^17.0.0 || ^18.0.0",
    "@types/react-dom": "^17.0.0 || ^18.0.0",
    "framer-motion": "6.5.1",
    "lightningcss-cli": "^1.30.2",
    "lucide-react": "0.454.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.5.1",
    "tw-animate-css": "1.3.3",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://gitlab.longbridge-inc.com/api/v4/projects/4872/packages/npm/"
  }
}
